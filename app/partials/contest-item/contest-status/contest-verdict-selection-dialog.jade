md-dialog(aria-label="Verdict selection")
  form
    md-toolbar
      div.md-toolbar-tools
        h2 Изменить вердикт
        span(flex)
        md-button.md-icon-button(ng-click="close()")
          md-icon(md-svg-src="/img/icons/ic_close_48px.svg", aria-label="Close dialog")

    md-dialog-content(style="max-width: 500px; min-width: 400px; max-height: 810px;")
      md-content.md-padding
        div.contest-creation__row
          div.contest-creation__row-title Выберите вердикт
          div(layout, layout-sm="column")
            md-input-container.contest-creation__field-inline-fix(flex)
              Label Вердикт
              md-select(ng-model='selectedVerdictId', flex)
                md-option(ng-repeat='verdict in verdicts', value='{{verdict.id}}', ng-bind='verdict.name + (verdict.scored ? " (штраф 20 мин)" : " (без штрафа)")')
        div.contest-creation__row

    div.md-actions(layout="row")
      md-button.md-primary(ng-click="save()") Сохранить
      md-button(ng-click="close()") Закрыть